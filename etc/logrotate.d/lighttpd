/var/log/lighttpd/*.log {
        weekly
        missingok
	copytruncate
        rotate 12
        compress
        notifempty
        sharedscripts
        postrotate
           if [ -f /var/run/lighttpd.pid ]; then \
             if [ -x /usr/sbin/invoke-rc.d ]; then \
                invoke-rc.d lighttpd reload > /dev/null 2>&1; \
             else \
                /etc/init.d/lighttpd reload > /dev/null 2>&1; \
             fi; \
           fi;
        endscript
}
