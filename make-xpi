rm -f webapp_*.xpi

rel_date=`date +'%Y%m%d%H%M%S'`
version=`cat VERSION`	
filename=webapp_${version}_${rel_date}.xpi


if [ "$1" != "production" ]; then
  reg="s/<em:version>.*<\/em:version>/<em:version>${version}.${rel_date}<\/em:version>/g"
  sed $reg install.rdf > install-new.rdf
  mv install-new.rdf install.rdf
else 
  reg="s/<em:version>.*<\/em:version>/<em:version>${version}<\/em:version>/g"
  sed $reg install.rdf > install-new.rdf
  mv install-new.rdf install.rdf
fi

find app/tmp -type f -exec rm -f {} \;

zip -r ${filename} chrome.manifest install.rdf sync_client sync_tools irc_client clear_tmp index.php app/ cake/ docs/ etc/ init.d/ vendors/

