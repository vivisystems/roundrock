<?xml version="1.0"?>
<!DOCTYPE overlay SYSTEM "chrome://viviecr/locale/dialog.dtd">

<overlay id="waiting_panel"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <popupset id="dialogs">
		<vivipanel id="wait_panel" position="overlap" noautohide="true" >
			<hbox class="container-popup-panel" flex="1" pack="center" style="margin: 0; padding: 0; display: -moz-box;">
				<vbox flex="1" class="wait-panel" style="width: 600px;" >
				<groupbox flex="1">
					<caption id="wait_caption" label="" class="label-page-title"/>
					<spacer style="height: 20px;" />
                    <progressmeter id="progress" mode="undetermined" value="0" />
					<spacer style="height: 20px;" />
				</groupbox>
				</vbox>
			</hbox>
		</vivipanel>
    </popupset>
    
</overlay>
