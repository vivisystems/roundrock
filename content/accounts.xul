<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE overlay [
  <!ENTITY % Overlay SYSTEM "chrome://viviecr/locale/dialog.dtd">
  %Overlay;
  <!ENTITY % Accounts SYSTEM "chrome://viviecr/locale/accounts.dtd">
  %Accounts;
  ]>
<?xml-stylesheet href="chrome://vivipos/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://viviecr/skin/" type="text/css"?>

<?xul-overlay href="chrome://global/content/dialogOverlay.xul" ?>


<window id="numpad" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <script type="application/x-javascript" src="chrome://vivipos/content/init_geckojs.js" />
    <script type="application/x-javascript" src="chrome://viviecr/content/accounts.js" />

    <box flex="1" class="mainpanel1 pad40">
        <vbox flex="1" class="panel40">
            <hbox flex="1" class="footlogo">
                <groupbox flex="1">
                    <caption label="&accounts.title;" />
                    <viviscrollabletree id="accountscrollablepanel" flex="1" rows="7" headers="Date,Topic,Description,Type,Amount" fields="created,topic,description,type,amount" onclick="$do('select',this.selectedIndex, 'Accounts');"
                                                        class="prodscrollablepanel" scrollUpClass="rightprevbtn gray" scrollDownClass="rightnextbtn gray">
                        <spacer flex="1" />
                    </viviscrollabletree>
                </groupbox>

                <spacer style="width:30px;" />

                <tabbox>
                    <tabs id="tabs" >
                        <tab id="tab1" label="&accounts.tab.accounts;" image="chrome://viviecr/content/skin/icons/rss-24.png" orient="vertical" />
                        <tab id="tab2" label="&accounts.tab.topics;" image="chrome://viviecr/content/skin/icons/rss-24.png" orient="vertical" />
                    </tabs>

                    <tabpanels id="tabpanels" >
                        <tabpanel>
                            <vbox flex="1">
                                <vbox>
                                    <label id="accounts_id" hidden="true" form="accountForm" name="id" value="" />
                                    <grid>
                                        <rows>
                                            <row>
                                                <label value="&accounts.topic;" />
                                                <textbox id="topic" value="" form="accountForm" name="topic"/>
                                            </row>

                                            <row>
                                                <label value="&accounts.description;" />
                                                <textbox id="description" value="" form="accountForm" name="description"/>
                                            </row>
                            
                                            <row>
                                                <label value="&accounts.type;" />
                                                <radiogroup flex="1" id="type" form="accountForm" name="type" >
                                                    <radio id="type_in" selected="true" value="IN" label="&accounts.typein;"/>
                                                    <radio id="type_out" value="OUT" label="&accounts.typeout;"/>
                                                </radiogroup>
                                            </row>

                                            <row>
                                                <label value="&accounts.amount;" />
                                                <textbox id="amount" value="" form="accountForm" name="amount" size="12" maxsize="12" />
                                            </row>
                                        </rows>
                                    </grid>
                                    <spacer style="height: 10px;" />
                                    <hbox>
                                        <button id="add_account" label="&accounts.button.action.add;" disabled="false" class="editbtns" oncommand="$do('add', null, 'Accounts');" />
                                        <spacer flex="1" />
                                        <button id="modify_account" label="&accounts.button.action.modify;" disabled="false" class="editbtns" oncommand="$do('update', null, 'Accounts');" />
                                        <button id="delete_account" label="&accounts.button.action.delete;" disabled="false" class="editbtns" oncommand="$do('delete', null, 'Accounts');" />
                                    </hbox>
                                </vbox>
                                <spacer style="height: 10px;" />
                                <separator class="groove-thin"/>
                                <spacer style="height: 10px;" />
                                <vbox>
                                    <numberpad id="multinumberpad" class="numberpad"/>
                                </vbox>
                                <spacer style="height:10px;" />
                                <vbox>
                                    <hbox>
                                        <sendkeybutton id="bkeyBtn"  label="DEL"   keyCode='0x08' class="systembtn"  />
                                        <vivibutton id="clearBtn"  label="CLEAR" class="systembtn"/>
                                    </hbox>
                                </vbox>
                            </vbox>

                        </tabpanel>

                        <tabpanel >
                            <vbox flex="1">
                                <label id="topics_id" hidden="true" form="account_topicForm" name="id" value="" />
                                <grid>
                                    <rows>
                                        <row>
                                            <label value="&accounts.topic.no;" />
                                            <textbox id="topic_no" value="" form="account_topicForm" name="no"/>
                                        </row>

                                        <row>
                                            <label value="&accounts.topic.topic;" />
                                            <textbox id="topic_name" value="" form="account_topicForm" name="topic"/>
                                        </row>
                                    </rows>
                                </grid>

                                <spacer style="height: 10px;" />

                                <viviscrollabletree id="topicscrollablepanel" flex="1" rows="7" headers="No,Topic" fields="no,topic" onclick="$do('select',this.selectedIndex, 'AccountTopics');"
                                                        class="prodscrollablepanel" scrollUpClass="rightprevbtn gray" scrollDownClass="rightnextbtn gray">
                                    <spacer flex="1" />
                                </viviscrollabletree>
                                <spacer style="height: 10px;" />
                                <hbox>
                                    <button id="add_topic" label="&accounts.button.action.add;" disabled="false" class="editbtns" oncommand="$do('add', null, 'AccountTopics');" />
                                    <spacer flex="1" />
                                    <button id="modify_topic" label="&accounts.button.action.modify;" disabled="false" class="editbtns" oncommand="$do('update', null, 'AccountTopics');" />
                                    <button id="delete_topic" label="&accounts.button.action.delete;" disabled="false" class="editbtns" oncommand="$do('delete', null, 'AccountTopics');" />
                                </hbox>
                            </vbox>
                        </tabpanel>
                    </tabpanels>
                </tabbox>
            </hbox>            
        </vbox>
    </box>
  
    <hbox id="okCancelButtonsRight" class="dialogbtns" />

</window>
