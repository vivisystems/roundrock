                                <numberpad id="multinumberpad" class="numberpad" target="plu"/>
                                <vbox>
                                    <sendkeybutton id="bkeyBtn"  label="DEL"   keyCode='0x08' target="plu" class="systembtn"  />
                                    <vivibutton id="clearBtn"  label="CLEAR" class="systembtn"/>
                                </vbox>
                            </hbox>
                        </row>
                    </rows>
                </grid>
            </groupbox>
        </vbox>
    </box>
  
    <hbox id="okCancelButtonsRight" class="dialogbtns" />

