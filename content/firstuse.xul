<script>
<![CDATA[
function checkCode(){
  document.getElementById('theWizard').canAdvance = (document.getElementById('secretCode').value == "vivipos");
} 

function checkRegFill(){
  document.getElementById('theWizard').canAdvance = ((document.getElementById('register_no').value != "") &&
	(document.getElementById('reg_name').value != "") &&
	(document.getElementById('reg_address').value != "") &&
	(document.getElementById('reg_tel').value != "") &&
	(document.getElementById('admin_password').value != ""));

} 

function finishConfig(){
	GREUtils.Pref.setPref('extensions.vivipos.firstrun', false);
	var firstrun = GREUtils.Pref.getPref('extensions.vivipos.firstrun');
	  // alert("Finish. Restarting...." + firstrun);
	
	GREUtils.restartApplication();
}

function cancelWizard(){
  alert("Cancel.");
}
]]>
</script>




